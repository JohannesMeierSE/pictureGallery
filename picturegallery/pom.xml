<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>picturegallery</groupId>
	<artifactId>picturegallery</artifactId>
	<name>picturegallery</name>

	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>

	<organization>
		<!-- Used as the 'Vendor' for JNLP generation -->
		<name>privateOrganization</name>
	</organization>

	<properties>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<build>
		<finalName>picturegallery</finalName>

		<plugins>

			<!-- for creating a working JavaFX-JAR -->
			<plugin>
				<groupId>com.zenjava</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>8.1.5</version>
				<configuration>
					<mainClass>picturegallery.MainApp</mainClass>

					<!-- only required if signing the jar file -->
					<keyStoreAlias>example-user</keyStoreAlias>
					<keyStorePassword>example-password</keyStorePassword>
					<allPermissions>true</allPermissions>

				</configuration>
			</plugin>

			<!-- to generate the EMF sourcecode -->
			<!-- http://mapasuta.sourceforge.net/maven/site/maven-emfgen-plugin/usage.html -->
			<plugin>
				<groupId>net.sf.mapasuta.build.maven.plugins</groupId>
				<artifactId>maven-emfgen-plugin</artifactId>
				<configuration>
					<!-- http://mapasuta.sourceforge.net/maven/site/maven-emfgen-plugin/configuration.html -->
					<eclipseDir>/opt/eclipse/eclipse-modeling</eclipseDir>
					<!-- Hack (tatsÃ¤chliche Version: 4.4.0): https://www.eclipse.org/forums/index.php?t=msg&th=134237 -->
					<eclipseVersion>3.3.0</eclipseVersion>
					<baseName>gallery</baseName>
					<genSrc>gallery</genSrc>
					<genModel>model.genmodel</genModel>
					<metaModels>
						<metaModel>${basedir}/src/main/resources/model/model.ecore</metaModel>
					</metaModels>
					<outputDirectory>${basedir}/src-gen/main/java</outputDirectory>
					<packageUris>
						<packageUri>http://gallery/1.0</packageUri>
					</packageUris>
					<prefixName>gallery</prefixName>
				</configuration>
				<executions>
					<execution>
						<id>generate-mm-sources</id>
						<goals>
							<goal>genmodel</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>


	<dependencies>

		<!-- MigLayout -->

		<dependency>
			<groupId>com.miglayout</groupId>
			<artifactId>miglayout-javafx</artifactId>
			<version>5.0</version>
		</dependency>

		<!-- Apache Commons -->

		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.6</version>
		</dependency>

	</dependencies>

</project>
